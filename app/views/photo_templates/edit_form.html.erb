<div class="container">
  <div class="row">
    <div class="col-md-12">
    </div> <!-- row -->
  </div> <!-- col -->
  
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <!-- Validation failure messages -->
      <% if @photo.errors.any? %>
        <% @photo.errors.full_messages.each do |message| %>
          <div class="alert">
            <%= message %>
          </div>
        <% end %>
      <% end %>
      
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">
            Edit Photo
          </h3>
        </div> <!-- card header -->
        
        <div class="card-body">
          <form action="/update_photo/<%=@photo.id%>" method="post">
            <div class="form-group">
              <label for="caption" class="col-form-label">
                Caption
              </label>
          
              <input id="caption" name="caption" class="form-control" placeholder="Add a caption..." value="<%= @photo.caption %>">
            </div>
          
            <div class="form-group">
              <label for="image" class="col-form-label">
                Image
              </label>
          
              <input type="text" id="image" name="image" placeholder="Add a URL..." class="form-control" value="<%= @photo.image %>">
            </div>
          
            <input type="hidden" name="user_id" value="<%= current_user.id %>">
            
            <div class="form-group">
              <button class="btn btn-block btn-outline-secondary">
                Update Photo
              </button>
            </div>
            
            <div class="form-group">
              <a href="/photos" class="btn btn-link btn-block">
                Cancel
              </a>
            </div>
            
          </form>
        </div> <!-- card body -->
      </div> <!-- card -->

    </div> <!-- row -->
  </div>  <!-- column -->
  
</div> <!-- container -->